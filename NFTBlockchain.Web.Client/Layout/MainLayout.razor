@inherits LayoutComponentBase

<MudThemingProvider Theme="Theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudContainer Class="d-flex flex-row align-items-center column-gap-4">
            <MudLink Typo="Typo.h6" Style="color: white!important; text-decoration: none;" Href="/">NFT Blockchain</MudLink>
            <MudLink Typo="Typo.body2" Class="fw-medium" Style="color: white!important; text-decoration: none;" Href="/AddArtwork">ДОБАВИТЬ ПРОИЗВЕДЕНИЕ</MudLink>
            <MudSpacer/>
            <AuthorizeView>
                <Authorized>
                    <MudMenu>
                        <ActivatorContent>
                            <MudButton Class="text-white">Аккаунт</MudButton>
                        </ActivatorContent>
                        <ChildContent>
                            <MudLink Href="/Account/Manage"><MudMenuItem>Аккаунт</MudMenuItem></MudLink>
                            <MudLink Href="/Account/Logout"><MudMenuItem>Выйти</MudMenuItem></MudLink>
                        </ChildContent>
                    </MudMenu>
                </Authorized>
                <NotAuthorized>
                    <MudButton Href="/Account/Login" Class="text-white">Войти</MudButton>
                    <MudButton Href="/Account/Register" Class="text-white">Регистрация</MudButton>
                </NotAuthorized>
            </AuthorizeView>
        </MudContainer>
    </MudAppBar>
    <MudMainContent Class="px-5">
        <MudContainer Class="px-5 py-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    public readonly MudTheme Theme = new()
    {
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = ["Inter", "Helvetica", "sans-serif"]
            }
        },
        PaletteDark = new()
        {
            Primary = new("#689F38"),
            Secondary = new("#83000D"),
            Background = new("#151515"),
            Surface = new("222"),
            AppbarBackground = new("#151515"),
            BackgroundGrey = new("#151515"),
            TextPrimary = new("#fefefe"),
            TextSecondary = new("#757575"),
            OverlayDark = new("rgba(0, 0, 0, .9)")
        },
        LayoutProperties = new()
        {
            DefaultBorderRadius = "10px"
        }
        
    };

}