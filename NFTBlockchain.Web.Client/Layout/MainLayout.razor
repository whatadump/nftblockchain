@using Color = MudBlazor.Color
@inherits LayoutComponentBase

@inject NavigationManager Navigation
@inject UserManager UserManager

<MudThemingProvider Theme="Theme" IsDarkMode="false" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudContainer Class="d-flex flex-row align-items-center">
            <MudLink Typo="Typo.h6" Style="color: white!important; text-decoration: none;" Href="/">NFT Blockchain</MudLink>
            <MudSpacer/>
            <AuthorizeView>
                <Authorized>
                    <MudMenu>
                        <ActivatorContent>
                            <MudButton Class="text-white">Аккаунт</MudButton>
                        </ActivatorContent>
                        <ChildContent>
                            <MudLink Href="/Account/Manage"><MudMenuItem>Аккаунт</MudMenuItem></MudLink>
                            <MudLink Href="/Account/Logout"><MudMenuItem>Выйти</MudMenuItem></MudLink>
                        </ChildContent>
                    </MudMenu>
                </Authorized>
                <NotAuthorized>
                    <MudButton Href="/Account/Login" Class="text-white">Войти</MudButton>
                    <MudButton Href="/Account/Register" Class="text-white">Регистрация</MudButton>
                </NotAuthorized>
            </AuthorizeView>
        </MudContainer>
    </MudAppBar>
    <MudMainContent Class="px-5">
        <MudContainer Class="px-5 py-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    public static readonly MudTheme Theme = new()
    {
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = ["Inter", "Helvetica", "sans-serif"]
            }
        }
    };

}