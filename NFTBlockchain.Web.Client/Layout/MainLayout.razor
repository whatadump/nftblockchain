@using Color = MudBlazor.Color
@inherits LayoutComponentBase

@inject NavigationManager Navigation

<MudThemingProvider Theme="Theme" IsDarkMode="false" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudContainer Class="d-flex flex-row align-items-center">
            <MudLink Style="color: white!important; text-decoration: none;" Href="/">NFT Blockchain</MudLink>
            <MudSpacer/>
            <AuthorizeView>
                <Authorized>
                    <MudMenu>
                        <ActivatorContent>
                            <MudButton Class="text-white">Аккаунт</MudButton>
                        </ActivatorContent>
                        <ChildContent>
                            <MudMenuItem><MudLink Href="/Account/Manage">Аккаунт</MudLink></MudMenuItem>
                            <MudMenuItem><MudLink Href="/Account/Logout">Выйти</MudLink></MudMenuItem>
                        </ChildContent>
                    </MudMenu>
                </Authorized>
                <NotAuthorized>
                    <MudButton Href="/Account/Login" Class="text-white">Войти</MudButton>
                    <MudButton Href="/Account/Register" Class="text-white">Регистрация</MudButton>
                </NotAuthorized>
            </AuthorizeView>
        </MudContainer>
    </MudAppBar>
    @* <MudDrawer @bind-Open="DrawerOpen" Elevation="2"> *@
    @*     <MudDrawerHeader Style="padding-left: 16px"> *@
    @*         <MudStack AlignItems="AlignItems.Center" Row="true" Spacing="3"> *@
    @*             <MudText Typo="Typo.h6">NFTBlockchain</MudText> *@
    @*         </MudStack> *@
    @*     </MudDrawerHeader> *@
    @*     <NavMenu/> *@
    @* </MudDrawer> *@
    <MudMainContent Class="px-5">
        <MudContainer Class="px-5 py-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool DrawerOpen = true;
    private void DrawerToggle() => DrawerOpen = !DrawerOpen;
    
    public static readonly MudTheme Theme = new()
    {
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = ["Inter", "Helvetica", "sans-serif"]
            }
        }
    };

}